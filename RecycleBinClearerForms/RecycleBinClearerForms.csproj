<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>bin\Release\net6.0-windows\Trash.ico</ApplicationIcon>
    <Description>Deletes the files and folders from the Recycle Bin</Description>
    <Authors>Cruz Sanchez</Authors>
    <Company />
    <Product>Recycle Bin Emptier</Product>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Trash.ico" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin\Release\net6.0-windows\Trash.ico" />
    <Content Include="Trash.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>